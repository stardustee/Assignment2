


<div class="row justify-content-md-center">
    <div class="col-8">
        
        <form method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" aria-describedby="name" 
              name="name" placeholder="Enter Buisness Name"
              required>
            </div>

            <div class="form-group">
                <label for="number">Phone Number</label>
                <input type="text" class="form-control" id="number" aria-describedby="number" 
                name="number" placeholder="Enter Buisness Number"
                required>
              </div>
              
              <div class="form-group">
                <label for="email">Email Address</label>
                <textarea class="form-control" id="email" rows="3"
                name="email" placeholder="Enter Buisness Email" required
                ></textarea>
              </div>
            
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-edit"></i> Update Buisness Contact</button>
            <a href="/buisness-list" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i> Cancel</a>
          </form>

    </div>
</div>